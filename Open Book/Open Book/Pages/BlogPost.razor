@page "/Blog/{BlogPostID}"

<div class="flex justify-between container mx-auto">
    <!--Blog Content-->
    <div class="w-full lg:w-8/12">
        <section class="text-gray-600 body-font pt-4">
            <h2 class="sm:text-3xl text-2xl text-gray-900 font-medium title-font mb-2 md:w-2/5">Kickstarter Actually Pinterest Brunch Bitters Occupy</h2>
            <span class="font-semibold title-font text-gray-700">@BlogPostTitle</span>
            <hr class="pb-6" />
            <div class="md:w-3/5">
                @((MarkupString)BlogPostContent)
            </div>
        </section>
    </div>
    <!--Left Side Bar-->
