        <div class="mt-10 px-8">
            <h1 class="mb-4 text-xl font-bold text-gray-700">Categories</h1>
            <div class="flex flex-col bg-white px-4 py-6 max-w-sm mx-auto rounded-lg shadow-md">
                <ul>
                    <li>
                        <NavLink href="#" class="text-gray-700 font-bold mx-1 hover:text-gray-600 hover:underline">
                            - Appels
                        </NavLink>
                    </li>
                    <li class="mt-2">
                        <NavLink href="#" class="text-gray-700 font-bold mx-1 hover:text-gray-600 hover:underline">
                            - Pears
                        </NavLink>
                    </li>
                    <li class="mt-2">
                        <NavLink href="#" class="text-gray-700 font-bold mx-1 hover:text-gray-600 hover:underline">
                            - Bananas
                        </NavLink>
                    </li>
                    <li class="mt-2">
                        <NavLink href="#" class="text-gray-700 font-bold mx-1 hover:text-gray-600 hover:underline">
                            - Bowls
                        </NavLink>
                    </li>
                    <li class="flex items-center mt-2">
                        <NavLink href="#" class="text-gray-700 font-bold mx-1 hover:text-gray-600 hover:underline">
                            - Tea
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>