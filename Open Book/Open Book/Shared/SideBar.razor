@code {
    private bool HideAboutMeMenuDropdown { get; set; } = true;
    private bool HidePlannerMeMenuDropdown { get; set; } = true;

    private bool MouseIsInMenu { get; set; } = false;

    private void ToggleAboutMeMenuDropdown()
    {
        HideAboutMeMenuDropdown = !HideAboutMeMenuDropdown;
        HidePlannerMeMenuDropdown = true;
    }

    private void TogglePlannerMeMenuDropdown()
    {
        HideAboutMeMenuDropdown = true;
        HidePlannerMeMenuDropdown = !HidePlannerMeMenuDropdown;
    }

    void OptionMenuMouseIn()
    {
        MouseIsInMenu = true;
    }

    void OptionMenuMouseOut()
    {
        if (MouseIsInMenu)
        {
            HideAboutMeMenuDropdown = true;
            HidePlannerMeMenuDropdown = true;
        }

        MouseIsInMenu = false;
    }
}