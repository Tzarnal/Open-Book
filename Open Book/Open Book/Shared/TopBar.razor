@inject IJSRuntime js

<nav class="px-4 flex justify-between bg-white h-16 border-b-2">
    <!-- top bar -->

    <ul class="flex items-center lg:hidden">
        <!-- top bar left -->
        <li class="h-6 w-6">
            <img class="h-full w-full mx-auto"
                 src="images/icon/icon-512.png"
                 alt="Open Book Logo" />
        </li>
    </ul>

    <ul class="flex items-center">
        <!-- top bar center -->
        <li>
            <h1 class="pl-10 lg:pl-0 text-gray-700">Open Book</h1>
        </li>
    </ul>

    <ul class="flex items-center">
        <!-- to bar right  -->
        <li id="MenuDropdownButton" class="hover:bg-blue-100 hover:border-b-2">
            <a @onclick="ToggleOptionsMenuDropdown"
               class="h-16 px-6 flex flex justify-center items-center w-full">
                <svg class="h-5 w-5"
                     xmlns="http://www.w3.org/2000/svg"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1
                            0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0
                            0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2
                            2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0
                            0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1
                            0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0
                            0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65
                            0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0
                            1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0
                            1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2
                            0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0
                            1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0
                            2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0
                            0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65
                            1.65 0 0 0-1.51 1z"></path>
                </svg>
            </a>
            <!-- Dropdown Body -->
            <div hidden="@HideOptionsMenuDropdown" @onmouseenter="OptionMenuMouseIn" @onmouseleave="OptionMenuMouseOut" class="border-2 absolute right-0 w-40 mt-2 py-2 bg-white border rounded-lg shadow-md">
                <TopBarOptionsMenu />
            </div>
        </li>
    </ul>
</nav>

@code{
    private bool HideOptionsMenuDropdown { get; set; } = true;
    private bool MouseIsInMenu { get; set; } = false;

    private void ToggleOptionsMenuDropdown()
    {
        HideOptionsMenuDropdown = !HideOptionsMenuDropdown;
    }

    void OptionMenuMouseIn()
    {
        MouseIsInMenu = true;
    }

    void OptionMenuMouseOut()
    {
        if (MouseIsInMenu)
        {
            HideOptionsMenuDropdown = true;
        }

        MouseIsInMenu = false;
    }
}